<configuration>

    <!-- Standard File Appender to write to /logs/app.log -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/logs/app.log</file> <!-- Ensure this file path is correct and accessible -->
        <append>true</append>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>
